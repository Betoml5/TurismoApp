<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurismoApp.Views.CreateCityPage">
    <StackLayout BackgroundColor="#5B7DB1">
        <Image Margin="0,30" Source="https://img.icons8.com/office/344/worldwide-location--v1.png"></Image>
        <StackLayout Margin="20">
            <Label>Nombre de la ciudad</Label>
            <Entry Placeholder="Cancun" Text="{Binding City.Name}"></Entry>

            <Label>Tipo</Label>
            <Entry Placeholder="Playa" Text="{Binding City.Type}"></Entry>

            <Label>Imagen</Label>
            <Entry Placeholder="http:imagen.png" Text="{Binding City.Image}"></Entry>

            <Button BackgroundColor="#3F72AF" TextColor="#fff" Text="Agregar" CornerRadius="4" Command="{Binding CreateCityCommand}"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>